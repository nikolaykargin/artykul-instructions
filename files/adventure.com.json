{
    "meta": {
        "author": {
            "name": {
                "@": "getText",
                "query": ".content .contributor-name"
            }
        }
    },
    "content": [
        {
            "@": "getElement",
            "query": ".content",
            "beforeReturn": [
                {
                    "@": "removeElement",
                    "query": ".article-intro"
                },
                {
                    "@": "removeElement",
                    "query": ".contributor"
                }
            ]
        }
    ]
}